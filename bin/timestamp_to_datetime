#!/usr/bin/env python3

import sys
from datetime import datetime


def guess_timestamp(timestamp):
    deadline = 32503680000  # 3000-01-01T00:00:00
    timestamp_unit = ""

    if timestamp < deadline:
        timestamp_unit = "seconds"
    elif timestamp / 1000 < deadline:
        timestamp_unit = "milliseconds"
        timestamp = timestamp / 1000
    elif timestamp / 1000000 < deadline:
        timestamp_unit = "microseconds"
        timestamp = timestamp / 1000000
    elif timestamp / 1000000000 < deadline:
        timestamp_unit = "nanoseconds"
        timestamp = timestamp / 1000000000
    return datetime.fromtimestamp(timestamp), timestamp_unit


def main():
    timestamp = int(float(sys.argv[1]))
    date_time, timestamp_unit = guess_timestamp(timestamp)

    print(timestamp_unit)
    print(date_time)


if __name__ == "__main__":
    main()
